    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    color: #e0e0e0;
  }
  
  .back {
    color: #f6821f;
    text-decoration: none;
    display: inline-block;
    margin-bottom: 1rem;
  }
  .back:hover {
    text-decoration: underline;
  }
  
  h1 {
    color: #f6821f;
    margin-bottom: 2rem;
  }
  
  h2 {
    color: #fff;
    margin-bottom: 1rem;
  }
  
  .section {
    margin: 2rem 0;
    padding: 1.5rem;
    background: #1a1a1a;
    border: 1px solid #333;
    border-radius: 12px;
  }
  
  .section ul {
    margin-left: 1.5rem;
    margin-top: 0.5rem;
  }
  
